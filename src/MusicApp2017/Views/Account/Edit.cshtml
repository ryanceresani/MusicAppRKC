@model MusicApp2017.Models.AccountViewModels.EditViewModel
@{
    ViewData["Title"] = "Edit Profile";
}

<h2>@ViewData["Title"].</h2>

<form asp-controller="Account" asp-action="Edit" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
    <h4>Create a new account.</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Email" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input readonly asp-for="Email" class="form-control">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="FavoriteGenre" class="col-md-2 control-label">Favorite Genre</label>
        <div class="col-md-10">
            <select asp-for="FavoriteGenre" class="form-control" asp-items="ViewBag.GenreID"></select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Update</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
