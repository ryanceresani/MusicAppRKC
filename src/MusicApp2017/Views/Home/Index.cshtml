@model IEnumerable<MusicApp2017.Models.Genre>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid">
    <div class="row row-offcanvas row-offcanvas-right">
        <div class="col-xs-12 col-sm-9 col-sm-push-3">
            <button type="button" class="pull-left btn btn-default visible-xs" data-toggle="offcanvas" aria-expanded="false" aria-controls="navbar">
                <i class="fa fa-navicon"></i>
            </button>
            <div class="jumbotron">
                <h1>MVC Music App</h1>
                <p>Keep track of your favorite albums and artists all on one site!</p>
                <p>Navigate to different categories using our navbar.</p>
            </div>
        </div><!--/.col-xs-12.col-sm-9-->

        <div class="col-xs-6 col-sm-3 col-sm-pull-9 sidebar-offcanvas" id="sidebar">
            <div class="list-group">
                <a asp-action="Index" asp-controller="Genres" class="list-group-item active">Genres</a>
                @foreach (var item in Model)
                {
                    <a class="list-group-item" asp-action="Details" asp-controller="Genres" asp-route-id="@item.GenreID">@item.Name</a>
                }
            </div>
        </div><!--/.sidebar-offcanvas-->
    </div><!--/row-->
</div><!--/.container-->

